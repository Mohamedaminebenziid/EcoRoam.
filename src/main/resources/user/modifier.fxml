<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controller.user.modifierusercontroller">

    <children>
        <AnchorPane prefHeight="400.0" prefWidth="371.0">
            <children>
                <TextField fx:id="usereamiltextfiled" layoutX="25.0" layoutY="80.0" prefHeight="25.0" prefWidth="153.0" promptText="Email" />
                <TextField fx:id="usernametextfiled" layoutX="27.0" layoutY="118.0" promptText="Nom" />
                <TextField fx:id="usertel_numbertextfiled" layoutX="27.0" layoutY="156.0" promptText="Téléphone" />
                <TextField fx:id="userrolesextfiled" layoutX="27.0" layoutY="259.0" promptText="Rôles" />
                <TextField fx:id="userpasswordtextfiled" layoutX="27.0" layoutY="294.0" promptText="Mot de passe" />
                <Button fx:id="ok" layoutY="340.0" mnemonicParsing="false" onAction="#modifieruser" prefHeight="25.0" prefWidth="310.0" text="UPDATE">
                    <font>
                        <Font name="Georgia Bold" size="14.0" />
                    </font></Button>
                <TextField fx:id="iduser" layoutX="94.0" layoutY="55.0" visible="false" />
                <Label layoutX="7.0" layoutY="14.0" prefHeight="17.0" prefWidth="175.0" text="UPDATE ">
                    <font>
                        <Font name="Georgia Bold" size="36.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <AnchorPane layoutY="420.0">
            <children>
                <Button fx:id="back" layoutX="14.0" layoutY="6.0" mnemonicParsing="false" onAction="#back" text="Retour">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <ImageView fitHeight="378.0" fitWidth="358.0" layoutX="517.0" layoutY="121.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@account-refresh.png" />
                    </image>
                </ImageView>

            </children>
        </AnchorPane>
    </children>
</AnchorPane>
