<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controller.user.TwoFactorAuthentificationController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <!-- Anchor elements to the left -->
        <AnchorPane prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: #f1e5e5;"
                    AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ImageView fitHeight="164.0" fitWidth="158.0" layoutX="121.0" layoutY="202.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@logo.png"/>
                    </image>
                </ImageView>

                <Button layoutX="103.0" layoutY="583.0" minWidth="200.0" mnemonicParsing="false"
                        onAction="#returnSignIn"
                        style="-fx-background-color: #f1e5e5; -fx-border-radius: 45; -fx-border-color: #009213; -fx-border-width: 3;"
                        text="SIGN IN" textFill="#009213">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>

        <!-- Anchor elements to the right -->
        <AnchorPane prefHeight="200.0" prefWidth="650.0" style="-fx-background-color: #ffffff;"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <TextField fx:id="codeId" layoutX="133.0" layoutY="322.0" maxWidth="544.0" minWidth="350.0"
                           prefHeight="31.0" prefWidth="266.0" promptText="Code"
                           style="-fx-border-radius: 10; -fx-background-color: #ffffff; -fx-border-color: #c0c0c0; -fx-border-width: 2;">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </TextField>
                <Text layoutX="103.0" layoutY="181.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="TWO-FACTOR AUTHENTICATION">
                    <font>
                        <Font name="System Bold" size="26.0"/>
                    </font>
                </Text>
                <Button layoutX="208.0" layoutY="422.0" maxWidth="214.0" minWidth="200.0" mnemonicParsing="false"
                        onAction="#verifCodeUser" style="-fx-background-color: #009213; -fx-background-radius: 45;"
                        text="VERIF CODE">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
                <Text fill="#00000090" layoutX="56.0" layoutY="241.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Your account is protected with two-factor authentication. We have sent you a text message. Please enter the code below "
                      wrappingWidth="491.6982421875">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Text>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
