<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controller.user.ajouterusercontroller"
            prefHeight="700.0" prefWidth="1500.0" style="-fx-background-color: #FFFFFF;">

    <left>
        <!-- Removed the VBox with green background color -->
    </left>

    <center>
        <AnchorPane prefHeight="700.0" prefWidth="1300.0">

            <!-- User interface elements -->
            <children>

                <Label layoutX="477.0" layoutY="64.0" prefHeight="21.0" prefWidth="72.0" text="EMAIL">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="usereamiltextfiled" layoutX="477.0" layoutY="91.0" prefHeight="25.0" prefWidth="287.0" promptText="user email" style="-fx-border-color: black;" />

                <Label layoutX="477.0" layoutY="149.0" prefHeight="17.0" prefWidth="56.0" text="NAME">
                    <font>
                        <Font name="Georgia Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="usernametextfiled" layoutX="477.0" layoutY="176.0" prefHeight="25.0" prefWidth="287.0" promptText="username" style="-fx-border-color: black;" />

                <Label layoutX="477.0" layoutY="205.0" text="PHONE">
                    <font>
                        <Font name="Georgia Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="usertel_numbertextfiled" layoutX="477.0" layoutY="232.0" prefHeight="25.0" prefWidth="287.0" promptText="user phone number" style="-fx-border-color: black;" />

                <Label layoutX="477.0" layoutY="291.0" text="ROLE">
                    <font>
                        <Font name="Georgia Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="userroletextfiled" layoutX="477.0" layoutY="318.0" prefHeight="25.0" prefWidth="287.0" promptText="user role" style="-fx-border-color: black;" />

                <Label layoutX="477.0" layoutY="377.0" text="PASSWORD">
                    <font>
                        <Font name="Georgia Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="userpasswordtextfiled" layoutX="477.0" layoutY="404.0" prefHeight="25.0" prefWidth="287.0" promptText="password" style="-fx-border-color: black;" />

                <Button fx:id="ok" layoutX="477.0" layoutY="461.0" mnemonicParsing="false" onAction="#ajouter" prefHeight="33.0" prefWidth="172.0" style="-fx-background-color: white; -fx-border-color: black;" text="add">
                    <font>
                        <Font name="Georgia Bold" size="18.0" />
                    </font>
                </Button>

                <Button layoutX="677.0" layoutY="461.0" mnemonicParsing="false" onAction="#naviguer" prefHeight="33.0" prefWidth="172.0" style="-fx-background-color: white; -fx-border-color: black;" text="afficher">
                    <font>
                        <Font name="Georgia Bold" size="14.0" />
                    </font>
                </Button>

                <VBox layoutX="1200.0" layoutY="640.0" prefHeight="72.0" prefWidth="61.0">
                    <children>
                        <Button fx:id="back" mnemonicParsing="false" onAction="#back" style="-fx-background-color: white; -fx-border-color: black;" text="back">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>

                <Label layoutX="480.0" layoutY="27.0" text="Add Admin">
                    <font>
                        <Font name="Georgia Bold" size="24.0" />
                    </font>
                </Label>

            </children>
        </AnchorPane>
    </center>
</BorderPane>
