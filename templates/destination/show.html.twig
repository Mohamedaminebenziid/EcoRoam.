{% extends 'dashboard.html.twig' %}

{% block title %}Destination{% endblock %}

{% block body %}
    <h1>Destination</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ destination.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ destination.name }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td><img src="{{ asset('uploads/destination/' ~ destination.img) }}"></td>

            </tr>
            <tr>
                <th>State</th>
                <td>{{ destination.state }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ destination.address }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ destination.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ destination.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_destination_index') }}">back to list</a>

    <a href="{{ path('app_destination_edit', {'id': destination.id}) }}">edit</a>

    {{ include('destination/_delete_form.html.twig') }}
{% endblock %}
