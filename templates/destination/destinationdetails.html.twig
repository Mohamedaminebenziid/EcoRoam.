{% extends 'base.html.twig' %} 


{% block body %}
<section class="page-banner overlay pt-170 pb-220 bg_cover" style="background-image: url('{{ asset('gowilds/images/bg/page-bg.jpg') }}');
;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="page-banner-content text-center text-white">
                    <h1 class="page-title">Destination</h1>
                    <ul class="breadcrumb-link text-white">
                        <li><a href="index.html">Home</a></li>
                        <li class="active">Destination</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
                <!--=== Tour Details Wrapper ===-->
                <div class="tour-details-wrapper pt-80">
                    <!--=== Tour Title Wrapper ===-->
                    <div class="tour-title-wrapper pb-30 wow fadeInUp">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="tour-title mb-20">
                                    <h3 class="title">{{ destination.name }}</h3>
                                    <p><i class="far fa-map-marker-alt"></i>{{ destination.address }}</p>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="tour-widget-info">
                                    <div class="info-box mb-20">
                                        <div class="icon">
                                            <i class="fal fa-box-usd"></i>
                                        </div>
                                        <div class="info">
                                            <h4><span>From</span>{{ destination.prix }}<span>TND</span></h4>
                                        </div>
                                    </div>
                                    
                                    <div class="info-box mb-20">
                                        <div class="icon">
                                            <i class="fal fa-planet-ringed"></i>
                                        </div>
                                        <div class="info">
                                            <h4>{{ destination.state }}</h4>
                                        </div>
                                             <div class="menu-button d-xl-block d-none">
                                        <a href="{{ path('app_reservation_create', {'destinationId': destination.id}) }}" class="main-btn primary-btn">Book Now<i
                                        class="fas fa-paper-plane"></i></a>

                                         </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-8">
                            <!--=== Place Content Wrap ===-->
                            <div class="place-content-wrap pt-45 wow fadeInUp">
                                <h3 class="title">Explore the Destination</h3>
                                <p>{{ destination.description }}</p>
                                <div class="row align-items-lg-center">
                                  
                                    <div class="col-lg-7">
{% set imageName = destination.img|split('\\')|last %}
<img src="{{ asset('uploads/destination/' ~ imageName) }}" alt="Place Image">                                    </div>
                               
                                </div>
                              
                            </div>
                        </div>
                    </div>
                </div>
</div>
    

{% endblock %}
