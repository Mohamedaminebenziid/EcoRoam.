{% extends 'base.html.twig' %}

 

{% block title %}comment index{% endblock %}

{% block body %}

    <h3>comment Table</h3>
    <div class="row">
                            <div class="col-md-12">
                            <table class="table table-bordered" id="editableTable">
                                <thead>
                                <tr>
                                    <th>Id</th>
                <th>Content</th>
                <th>Img</th>
                <th>Rate</th>
                <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                        {% for comment in comments %}

                                <tr >
                                <td>{{ comment.id }}</td>
                <td><a href="{{ path('app_comment_afficher_index', {'id': comment.id}) }}">{{ comment.content }}</a></td>
                <td>{{ comment.img }}</td>
                <td>{{ comment.rate }}</td>
                
                                   
                                    <td>
                                    <a class="button button-small edit" title="Edit" href="{{ path('app_comment_front_edit', {'id': comment.id}) }}">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                    
                                    <a class="button button-small edit" title="Delete" href="{{ path('app_comment_delete', {'id': comment.id}) }}">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                    </td>
                                </tr> 
                                {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
                                </tbody>
                                </thread>
                                </table>
  <button  class="btn btn-raised btn-primary btn-round waves-effect"><a href="{{ path('app_comment_create_new') }}">Create</a></button>
                                </div>
{% endblock %}