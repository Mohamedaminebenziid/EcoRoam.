{% extends 'dashboard.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
    <h1>Events</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ event.price }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ event.state }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td><img src="{{ asset('uploads/destination/' ~ event.img) }}"></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date.format(' %d / %m / %y ') : '' }}</td>
            </tr>
            <tr>
                <th>activities</th>
                <td><ul>
                        {% for activity in event.events %}
                        <li>{{ activity.name }}</li> {# Assuming 'name' is a property of the Activity entity #}
                        {% endfor %}
             </ul></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_events_index') }}">back to list</a>

    <a href="{{ path('app_events_edit', {'id': event.id}) }}">edit</a>

    {{ include('events/_delete_form.html.twig') }}
{% endblock %}
