{% extends 'dashboard.html.twig' %}

{% block title %}Activities{% endblock %}

{% block body %}
    <h1>Activities</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Img</th>
<td><img src="{{ asset('uploads/destination/' ~ activity.img) }}"></td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ activity.state }}</td>
            </tr>
            <tr>
                <th>description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ activity.price }}</td>
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('app_activities_index') }}">back to list</a>

    <a href="{{ path('app_activities_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activities/_delete_form.html.twig') }}
{% endblock %}
