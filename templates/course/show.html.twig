{% extends 'dashboard.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ course.title }}</td>
            </tr>
            <tr>
                <th>Descrition</th>
                <td>{{ course.Descrition }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ course.Duration }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ course.Difficulty }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ course.Category }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads/course/' ~ course.image) }}"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_course_index') }}">back to list</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
