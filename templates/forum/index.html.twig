{% extends 'dashboard.html.twig' %}

 

{% block title %}forum index{% endblock %}

{% block body %}

    <h3>forum Table</h3>
    <div class="row">
                            <div class="col-md-12">
                            <table class="table table-bordered" id="editableTable">
                                <thead>
                                <tr>
                                    <th>Id</th>
                
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                         {% for forum in forums %}

                                <tr >
                                <td>{{ forum.id }}</td>
                <td><a href="{{ path('app_forum_show', {'id': forum.id}) }}">{{ forum.title }}</a></td>
                <td>{{ forum.description }}</td>
                
                
                                   
                                    <td>
                                    <a class="button button-small edit" title="Edit" href="{{ path('app_forum_edit', {'id': forum.id}) }}">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                    
                                    <a class="button button-small edit" title="Delete" href="{{ path('app_forum_delete', {'id': forum.id}) }}">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                    </td>
                                </tr> 
                                {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
                                </tbody>
                                </thread>
                                </table>
  <button  class="btn btn-raised btn-primary btn-round waves-effect"><a href="{{ path('app_forum_new') }}">Create</a></button>
                                </div>
{% endblock %}
