{% extends 'base.html.twig' %}

{% block title %}Hello ClientController!{% endblock %}

{% block body %}

        <!--====== Start Breadcrumb Section ======-->
  <section class="page-banner overlay pt-170 pb-220 bg_cover" style="background-image: url('{{ asset('gowilds/images/bg/page-bg.jpg') }}');
;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="page-banner-content text-center text-white">
                    <h1 class="page-title">shop</h1>
                    <ul class="breadcrumb-link text-white">
                        <li><a href="index.html">Home</a></li>
                        <li class="active">Shop</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
        <!--====== Start Products Section ======-->
        <section class="products-section pt-100 pb-90">
            <div class="container">
                <!--====== Products Filter ======-->
                <div class="page-item-filter mb-40 wow fadeInUp">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7">
                            <!--====== Show Text ======-->
                            <div class="show-text mb-20">
                                <h6>Showing 3 Results {{  Produit.data|length}}</h6>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <!--====== Product Dropdown ======-->
   <form action="{{ path('app_shop') }}" method="get">
    <div class="product-dropdown float-md-end">
        <select class="wide" name="category">
            
            {% set categories = [] %}
            {% if Produit is defined and Produit|length > 0 %}
                {% for row in Produit.data %}
                    {% if row.categorie not in categories %}
                        <option value="{{ row.categorie }}">{{ row.categorie }}</option>
                        {% set categories = categories|merge([row.categorie]) %}
                    {% endif %}
                {% endfor %}
            {% endif %}
        </select>
    </div>
    <div class="float-md-end">
        <button type="submit" class="btn btn-secondary">Sort By</button>
    </div>
</form>

</form>

                        </div>
                    </div>
                </div>
                <div class="row">
                  {% if Produit is defined and Produit | length > 0 %}
                            {% for row in  Produit.data %}
                    <div class="col-xl-4 col-md-6 col-sm-12">
                        <!--=== Single Product Item ===-->
                        <div class="single-product-item mb-50 wow fadeInUp">
                            <div class="img-holder">
                                <img src="{{ asset('uploads/imagesProduits/'~ row.image) }}" alt="Product Image">
                                <div class="tag">
                                    <span class="off">0% OFF</span>
                                </div>
                                <div class="content-hover">
                                    <a href="{{path('cart_add',{id: row.id})}}" class="main-btn primary-btn">Add To Cart <i class="far fa-shopping-bag"></i></a>
                                </div>
                            </div>
                            <div class="content">
                                <div class="info">
                                    <h3 class="title"><a href="{{path('product_details',{'id':row.id})}}">{{row.intitule}}</a></h3>
                                    <ul class="ratings">
                                    <li><i class="fas fa-star"></i></li>
                                    <li><i class="fas fa-star"></i></li>
                                    <li><i class="fas fa-star"></i></li>
                                    <li><i class="fas fa-star"></i></li>
                                    <li><i class="fas fa-star"></i></li>
                                </ul>
                                <h4>
                                    <span class="price">{{row.prix}}</span><span class="currency">&nbsp;&nbsp;TND</span></h4>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                      {% endfor %}
                {% endif %}
        
                
                </div>
                <div class="row">
            
                    <div class="col-lg-12">
                           {% if Produit.data is defined %}
                                 {% set path = 'app_shop' %}
                                    {% set pages = Produit.pages %}
                                    {% set currentPage = Produit.page %}
                                    {% include "client/_pagination.html.twig" %}

                                {% endif %}
                    </div>
                </div>
            </div>
        </section><!--====== End Products Section ======-->
        <!--====== Start Footer ======-->
        

{% endblock %}
